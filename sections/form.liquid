    }
    .form-header{
        margin-bottom: 30px;
    }
    .my-width{
        width: 100%;
    }
    .label-name{
        margin-bottom: 5px;
        display: block;
    }
    .name-input{
        height: 42px;
        border: none;
        background-color: #f1f1f1;
        box-shadow: 0 1px 3px rgb(50 50 93 / 15%), 0 1px 0 rgb(0 0 0 / 2%);
        padding: 10px 12px;
    }
    .name-input:focus-visible {
        outline: none;
    }
    .my-flex{
        display: flex;
        width: 100%;
        column-gap: 15px;
    }
    .input-1 {
        width: 100%;
        margin-top: 20px;
    }
    .input-2{
        width: 100%;
        margin-top: 20px;
    }
    .input-3{
        width: 100%;
        margin-top: 20px;
    }
    .for-txt-area{
        resize: vertical;
        height: initial;
    }
    .my-bttn{
        margin-top: 20px;
        border: none;
        background-color: #000;
        color: #fff;
        padding: 10px 25px;
    }
    @media only screen and (max-width:768px){
        .my-flex{
            flex-direction: column;
        }
    }
    </style> 





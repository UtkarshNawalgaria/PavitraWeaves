<div class="back-ground-color">
    <div class="container-area">
            <div class="form-header">
                <p class="">{{ section.settings.heading }}</p>
            </div>

    <form action="https://sheetdb.io/api/v1/ke0pit7h5elhg" method="post" id="https://pavitra-weaves.myshopify.com">
            <div class="form-area">
                <div class="input-1">
                    <label for="name" class="label-name my-width">{{ section.settings.display-sheet-input }}</label>
                    <input type="text" class="name-input my-width" id="name" name="data[{{ section.settings.display-sheet-input }}]">
                </div>
                <div class="my-flex">
                    <div class="input-2">
                        <label for="email" class="label-name my-width">{{ section.settings.display-sheet-input2 }}</label>
                        <input type="email" class="name-input my-width" id="email" name="data[{{ section.settings.display-sheet-input2 }}]">
                    </div>
                    <div class="input-2">
                        <label for="Country" class="label-name my-width">{{ section.settings.display-sheet-input3 }}</label>
                        <input type="text" class="name-input my-width" id="country" name="data[{{ section.settings.display-sheet-input3 }}]">
                    </div>
                </div>
                <div class="my-flex">
                    <div class="input-2">
                        <label for="select" class="label-name my-width">{{ section.settings.display-sheet-input4 }}</label>
                        <select name="data[Selectplatform]" class="name-input my-width" id="{{ section.settings.display-sheet-input4 }}">
                            <option value="" disabled="disabled">Please select</option>
                            <option value="Facetime">Facetime</option>
                            <option value="WhatsApp" selected="selected">WhatsApp</option>
                        </select>
                    </div>
                    <div class="input-2">
                        <label for="number" class="label-name my-width">{{ section.settings.display-sheet-input5 }}</label>
                        <input type="tel" class="name-input my-width" id="phone" name="data[{{ section.settings.display-sheet-input5 }}]" placeholder="e.g. +1 ..">
                    </div>
                </div>
                <div class="input-3">
                    <label for="Date & time" class="label-name my-width">{{ section.settings.display-sheet-input6 }}</label>
                    <textarea type="textarea" rows="5" class="for-txt-area name-input my-width" id="Date&Time" name="data[{{ section.settings.display-sheet-input6 }}]" placeholder="10:30AM to 05:30PM IST [MON - SAT] Only"></textarea>
                </div>
            </div>
            <input class="my-bttn" type="submit" value="submit">
        </form>

    </div>
</div>


<style>
    .back-ground-color{
        background-color: #fff;
    }
    .container-area{
        width: 100%;
